@model IEnumerable<Countries.Domain.User>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            User
        </th>
        <th>
            Email
        </th>
        <th>
           Phone
        </th>
        <th>
            Image
        </th>
        <th>
            User Type
        </th>
        <th></th>
    </tr>

  @foreach (var item in Model.OrderBy(u => u.FirstName).ThenBy(u => u.LastName))
   {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.ImagePath))
            {
                <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:150px;height:150px;max-width:100%;height:auto;"/>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserType.Name)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |*@
            @Html.ActionLink("Details", "Details", new { id = item.UserId })
            @*@Html.ActionLink("Delete", "Delete", new { id = item.UserId })*@
        </td>
    </tr>
   }
</table>